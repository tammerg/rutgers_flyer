<!-- Login Modal Structure Body -->
<div class="modal modal-fixed-footer" id="modal1">
  <div class="modal-content">
    <h4>Login!</h4>
    <p>Please enter your credentials</p>
    <div class="row">
      <form action="/" class="col s12" method="post">
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">email</i>
            <input class="validate" id="email" name="username" type="email"> <label for="email">Email</label>
          </div>
        </div>
        <div class="row">
          <div class="input-field col s12">
            <i class="material-icons prefix">lock</i>
            <input class="validate" id="password" name="password" type="password"> <label for="password">Password</label>
          </div>
        </div>
    </div>
    <p>Thanks!</p>
  </div>
<!-- Login Modal Structure footer -->
  <div class="modal-footer">
    <a class="modal-action modal-close waves-effect waves-green btn-flat" href="#!">close</a>
    <button class="btn waves-effect waves-light col s3" type="submit" name="action">Submit
         <i class="material-icons right">send</i>
    </button>
    <p></p>
  </div>
  </form>
</div>
<!-- Login Modal Structure End -->


<!-- Register Modal Structure Body -->
